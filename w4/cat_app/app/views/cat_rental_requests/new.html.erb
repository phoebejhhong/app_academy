<h1>Make New Request</h1>

<% if @cat_rental_request.errors.any? %>
<ul>
  <% @cat_rental_request.errors.full_messages.each do |msg| %>
  <li>
    <%= msg %>
  </li>
  <% end %>
</ul>
<% end %>
<div class="row">

  <form action="/cat_rental_requests" method="post" class="form-horizontal col-md-8">

    <div class="form-group">
      <label class="col-md-2 control-label" for="cat_rental_request_cat_id">Cat</label>
      <div class="col-md-6">
        <select class="form-control" id="cat_rental_request_cat_id" name="cat_rental_request[cat_id]">
          <% @all_cats.each do |cat| %>
          <option value="<%= cat.id %>" <%= "selected" if @cat_rental_request.cat_id == cat.id %>>
            <%= cat.name %>
          </option>
          <% end %>
        </select>
      </div>
  </div>

    <div class="form-group">
      <label class="col-md-2 control-label" for="cat_rental_request_start_date">Start Date</label>
      <div class="col-md-6">
        <input class="form-control" id="cat_rental_request_start_date" type="date" name="cat_rental_request[start_date]" value="<%= @cat_rental_request.start_date %>">
      </div>
  </div>

    <div class="form-group">
      <label class="col-md-2 control-label" for="cat_rental_request_end_date">End Date</label>
      <div class="col-md-6">
        <input class="form-control" id="cat_rental_request_end_date" type="date" name="cat_rental_request[end_date]" value="<%= @cat_rental_request.end_date %>">
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-6 col-md-offset-2">
        <input type="submit" class="btn btn-default" value="Create Request">
      </div>
    </div>

</form>
</div>

<%= link_to "Back to All Cats", cats_path %>
